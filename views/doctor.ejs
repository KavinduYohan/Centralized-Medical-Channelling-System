    <!-- Sidebar -->
    <div class="sidebar">
        <div class="container">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="bi bi-house-door"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="status">
                            <i class="bi bi-calendar"></i> Appointments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <i class="bi bi-file-text"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-9 offset-md-3">
                    <!-- Main Content Area -->
                    <div class="card">
                        <div class="card-header">
                            Welcome, Doctor!
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">All Appointments</h5>
                            <p class="card-text">You have appointments scheduled</p>
                            <a href="/status" class="btn btn-primary">View Appointments</a>
                        </div>
                    </div>

                    <!-- Statistics -->
                    <div class="row mt-4">
                        <div class="row mt-4">
                            <div class="col-md-4">
                              <div class="card bg-light mb-3">
                                <div class="card-header">Appointments</div>
                                <div class="card-body">
                                  <h5 class="card-title">Today's Appointments</h5>
                                  <p class="card-text">You have <%= todayAppointmentsCount %> appointments scheduled for today.</p>
                                </div>
                              </div>
                            </div>
                            <div class="col-md-4">
                              <div class="card bg-light mb-3">
                                <div class="card-header">Upcoming Appointments</div>
                                <div class="card-body">
                                  <h5 class="card-title">Upcoming Appointments</h5>
                                  <p class="card-text">You have <%= upcomingAppointmentsCount %> upcoming appointments.</p>
                                </div>
                              </div>
                            </div>
                            <!-- <div class="col-md-4">
                              <div class="card bg-light mb-3">
                                <div class="card-header">Patients</div>
                                <div class="card-body">
                                  <h5 class="card-title">Total Patients</h5>
                                  <p class="card-text">You are currently treating 20 patients.</p>
                                </div>
                              </div>
                            </div> -->
                          </div>
                    <!-- Time Update Form -->
                    <div class="card mt-4">
                        <div class="card-header">
                            Update Working Hours
                        </div>
                        <div class="card-body">
                            <form action="/update-hours" method="post">
                                <input type="hidden" name="docID" value="<%= userId %>">
                                <div class="mb-3">
                                    <label for="startTime" class="form-label">Start Time</label>
                                    <input type="time" class="form-control" id="startTime" name="startTime" required>
                                </div>
                                <div class="mb-3">
                                    <label for="endTime" class="form-label">End Time</label>
                                    <input type="time" class="form-control" id="endTime" name="endTime" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Update Hours</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    
      

    <!-- Bootstrap JS (Optional, for Bootstrap components like modals, tooltips, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Success Alert -->
<% if (typeof success !== 'undefined' && success.length > 0) { %>
  <script>
    Swal.fire({
      icon: 'success',
      title: 'Success',
      text: '<%= success %>',
      confirmButtonText: 'OK'
    });
  </script>
<% } %>

<!-- Error Alert -->
<% if (typeof error !== 'undefined' && error.length > 0) { %>
  <script>
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: '<%= error %>',
      confirmButtonText: 'OK'
    });
  </script>
<% } %>

</body>
